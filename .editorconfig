root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
quote_type = single

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.json]
indent_size = 2

[*.css]
indent_size = 2
quote_type = double
